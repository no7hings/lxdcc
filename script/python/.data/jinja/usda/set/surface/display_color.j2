#usda 1.0
(
    defaultPrim = "{{ dcc.root_name }}"
    metersPerUnit = 0.01
    upAxis = "Y"
)

over "{{ dcc.root_name }}" (
    variants = {
        string display_color = "None"
    }
    prepend variantSets = "display_color"
) {
    variantSet "display_color" = {
        "None" (){}
{%- for i_name, i_file in display_colors.iteritems() %}
        "{{ i_name }}" (
            payload = @{{ i_file }}@
        ){
            asset userProperties:usd:variants:asset:display_color:file = @{{ i_file }}@
        }
{%- endfor %}
    }
}