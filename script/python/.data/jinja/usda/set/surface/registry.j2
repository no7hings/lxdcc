#usda 1.0
(
    defaultPrim = "{{ dcc.root }}"
    metersPerUnit = 0.01
    upAxis = "Y"
)

over "{{ dcc.root }}" (
    prepend references = [
        @{{ usdas.material }}@,
    ]
    variants = {
        string uv = "{{ look.passes[0] }}"
    }
    prepend variantSets="uv"
)
{
    variantSet "uv" = {
        "None" (){}
        "default" (
            payload = @uv_map.usd@
        ){}
       }
}